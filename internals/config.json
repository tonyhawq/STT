{
    "input": {
        "activate": "x2",
        "reject": "x1",
        "activate_globally_blocked": true,
        "radio_modifier": "ctrl",
        "autosend": true
    },
    "output": {
        "use_say_or_chat": "say",
        "say_settings": {
            "delay_ms": 100
        },
        "chat_settings": {
            "chat_key": "t",
            "chat_delay": 0.75
        },
        "word_replacements": {}
    },
    "meta": {
        "path_to_model": "model/",
        "verbose": false,
        "enable_version_checking": true,
        "window_width": 300,
        "window_height": 100
    },
    "skip_model_load": false,
    "filters": {
        "all_caps": {
            "title": "CAPS",
            "actions": [
                {
                    "type": "script",
                    "script": "filters/all_caps.py"
                }
            ]
        },
        "excited": {
            "title": "!!!",
            "actions": [
                {
                    "type": "script",
                    "script": "filters/excited.py"
                }
            ]
        },
        "binary_radio": {
            "title": "Binary",
            "toggle": true,
            "color": "blue",
            "suppress": true,
            "group": "radio",
            "exclusive": true,
            "text_color": "white",
            "action": "filters/binary.py"
        },
        "medical_radio": {
            "title": "Med",
            "toggle": true,
            "color": "cyan",
            "suppress": true,
            "group": "radio",
            "exclusive": true,
            "action": "filters/medical.py"
        },
        "cargo_radio": {
            "title": "Cargo",
            "toggle": true,
            "color": "saddle brown",
            "suppress": true,
            "group": "radio",
            "exclusive": true,
            "action": "filters/cargo.py"
        },
        "engineering_radio": {
            "title": "Engi",
            "toggle": true,
            "color": "DarkOrange1",
            "suppress": true,
            "group": "radio",
            "exclusive": true,
            "action": "filters/engineering.py"
        },
        "command_radio": {
            "title": "Command",
            "toggle": true,
            "color": "gold",
            "suppress": true,
            "group": "radio",
            "exclusive": true,
            "action": "filters/command.py"
        },
        "security_radio": {
            "title": "Sec",
            "toggle": true,
            "color": "red",
            "suppress": true,
            "group": "radio",
            "exclusive": true,
            "action": "filters/security.py"
        },
        "science_radio": {
            "title": "Science",
            "toggle": true,
            "color": "purple",
            "text_color": "white",
            "suppress": true,
            "group": "radio",
            "exclusive": true,
            "action": "filters/science.py"
        },
        "rage": {
            "title": "Rage",
            "toggle": true,
            "actions": [
                {
                    "type": "filter",
                    "name": "all_caps"
                },
                {
                    "type": "filter",
                    "name": "excited"
                }
            ]
        } 
    }
}