{
    "input": {
        "activate": "x2",
        "reject": "x1",
        "radio_modifier": "ctrl_l",
        "autosend": true
    },
    "output": {
        "use_say_or_chat": "say",
        "say_settings": {},
        "chat_settings": {
            "chat_key": "t",
            "radio_key": "y",
            "chat_delay": 0.75
        },
        "word_replacements": {}
    },
    "meta": {
        "path_to_model": "model/",
        "verbose": false,
        "enable_version_checking": true
    },
    "filters": {
        "all_caps": {
            "toggle": true,
            "key_combination": "f1",
            "actions": [
                {
                    "type": "script",
                    "script": "filters/all_caps.py"
                }
            ]
        },
        "excited": {
            "toggle": true,
            "key_combination": "f2",
            "actions": [
                {
                    "type": "script",
                    "script": "filters/excited.py"
                }
            ]
        },
        "rage": {
            "toggle": true,
            "key_combination": "f3",
            "actions": [
                {
                    "type": "filter",
                    "name": "all_caps"
                },
                {
                    "type": "filter",
                    "name": "excited"
                }
            ]
        }
    }
}